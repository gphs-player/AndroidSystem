<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:text="ConstraintLayout使用"
        android:onClick="constraint"
        android:id="@+id/constraint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/recycler"
        android:text="RecyclerView使用"
        android:onClick="recycler"
        app:layout_constraintTop_toBottomOf="@id/constraint"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="LayoutInflate使用"
        android:onClick="inflate"
        android:id="@+id/inflate"
        app:layout_constraintTop_toBottomOf="@id/recycler"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="RootCheck"
        android:onClick="root"
        android:id="@+id/root"
        app:layout_constraintTop_toBottomOf="@id/inflate"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="XposeInstallCheck"
        android:onClick="xpose"
        android:id="@+id/xposed"
        app:layout_constraintTop_toBottomOf="@id/root"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="XposeHookCheck"
        android:onClick="hook"
        android:id="@+id/hook"
        app:layout_constraintTop_toBottomOf="@id/xposed"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="MonitorCheck"
        android:id="@+id/monitor"
        android:onClick="monitor"
        app:layout_constraintTop_toBottomOf="@id/hook"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="SendMSgDD"
        android:id="@+id/ddmsg"
        android:onClick="ddmsg"
        app:layout_constraintTop_toBottomOf="@id/monitor"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>